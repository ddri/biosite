---
// Main page component converted from Next.js
import Button from '../components/ui/Button.astro';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>David Ryan - Software Engineer</title>
  </head>
  <body>
    <main class="container mx-auto px-4 py-8">
      <div class="space-y-16">
        <!-- Hero Section -->
        <section class="text-center">
          <img
            src="/placeholder.svg?height=150&width=150"
            alt="David Ryan"
            width="150"
            height="150"
            class="mx-auto rounded-full"
          />
          <h1 class="mt-4 text-4xl font-bold">David Ryan</h1>
          <p class="mt-2 text-xl text-gray-600">Software Engineer</p>
        </section>

        <!-- About Section -->
        <section>
          <h2 class="text-2xl font-semibold mb-6">About Me</h2>
          <p class="text-gray-700 max-w-3xl mx-auto">
            I'm a software engineer with a passion for web development and creating efficient, scalable solutions. With
            experience in both front-end and back-end technologies, I enjoy tackling complex problems and building
            user-friendly applications. My projects demonstrate my ability to work with various technologies and deliver
            high-quality software solutions.
          </p>
        </section>

        <!-- Projects Section -->
        <section>
          <h2 class="text-2xl font-semibold mb-4">Projects</h2>
          <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded shadow">
              <h3 class="text-xl font-semibold mb-2">E-commerce Platform</h3>
              <p class="text-gray-600 mb-4">A full-stack e-commerce solution with React and Node.js</p>
              <Button variant="outline">Learn More</Button>
            </div>
            <div class="bg-white p-6 rounded shadow">
              <h3 class="text-xl font-semibold mb-2">Weather App</h3>
              <p class="text-gray-600 mb-4">Real-time weather forecasting using OpenWeatherMap API</p>
              <Button variant="outline">Learn More</Button>
            </div>
            <div class="bg-white p-6 rounded shadow">
              <h3 class="text-xl font-semibold mb-2">Task Management System</h3>
              <p class="text-gray-600 mb-4">A Kanban-style project management tool built with React and Firebase</p>
              <Button variant="outline">Learn More</Button>
            </div>
            <div class="bg-white p-6 rounded shadow">
              <h3 class="text-xl font-semibold mb-2">Personal Finance Tracker</h3>
              <p class="text-gray-600 mb-4">An app to help users manage their expenses and savings</p>
              <Button variant="outline">Learn More</Button>
            </div>
            <div class="bg-white p-6 rounded shadow">
              <h3 class="text-xl font-semibold mb-2">Recipe Finder</h3>
              <p class="text-gray-600 mb-4">A web app that suggests recipes based on available ingredients</p>
              <Button variant="outline">Learn More</Button>
            </div>
            <div class="bg-white p-6 rounded shadow">
              <h3 class="text-xl font-semibold mb-2">Fitness Tracker</h3>
              <p class="text-gray-600 mb-4">An application to log workouts and track fitness progress</p>
              <Button variant="outline">Learn More</Button>
            </div>
          </div>
        </section>

        <!-- Contact Section -->
        <section>
          <h2 class="text-2xl font-semibold mb-6">Contact Me</h2>
          <form class="space-y-4 max-w-xl mx-auto">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm border px-3 py-2"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm border px-3 py-2"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm border px-3 py-2"
              ></textarea>
            </div>
            <Button type="submit">Send Message</Button>
          </form>
        </section>
      </div>
    </main>
  </body>
</html>